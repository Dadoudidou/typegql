{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2017"],
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "pretty": true,
    "baseUrl": "./src",
    "outDir": "./lib",
    "declaration": true,
    "outFile": "./lib/index.js",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "stripInternal": true
  }
}
